# top-most EditorConfig file
root = true

# Windows-style newlines with a newline ending every file
[**]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[**.java]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
ij_java_class_count_to_use_import_on_demand = 999999
ij_java_names_count_to_use_import_on_demand = 9999999
ij_java_imports_layout = $*,|,java.**,|,javax.**,|,org.**,|,com.**,|,*,|

[**.yml]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# 4 space indentation
[**.jsx]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[pom.xml]
charset = utf-8
indent_style = space
indent_size = 4

[{*.cjs,*.es6,*.js,*.mjs}]
indent_size = 2
tab_width = 2
ij_continuation_indent_size = 2
